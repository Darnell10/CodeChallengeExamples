<?xml version="1.0" encoding="utf-8"?>
<!-- I replaced the RelativeLayout with a Linear one. -->
<!-- Moved all dimensions into the dimens resource. -->
<!-- I'm also not setting any text before hand. Notice I'm using tools:src and tools:text just for preview purposes. -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/food_viewholder_height"
    android:background="@android:color/white"
    android:paddingLeft="@dimen/viewholder_padding_left">

    <ImageView
        android:id="@+id/food_image"
        android:layout_width="@dimen/food_viewholder_height"
        android:layout_height="match_parent"
        tools:src="@drawable/ic_replay_black_24dp" />

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/viewholder_padding_left"
        android:gravity="center_vertical"
        android:textSize="@dimen/viewholder_title_text_size"
        tools:text="Example Food" />

</LinearLayout>